<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar" />

    <!-- Buttons -->
    <style name="MainButton">
        <item name="android:background">@drawable/border_button_gray</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="PhotoNavButton">
        <item name="android:background">@drawable/border_button_gray</item>
    </style>

    <style name="SmallButton">
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/border_button_gray</item>
        <item name="android:textColor">#333</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">-6dp</item>
        <item name="android:paddingBottom">-6dp</item>
    </style>

    <style name="GrayButton">
        <item name="android:background">@drawable/border_button_gray</item>
        <item name="android:textColor">#333</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
    </style>

    <style name="BlueButton">
        <item name="android:background">@drawable/border_button_blue</item>
        <item name="android:textColor">#333</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="GreenButton">
        <item name="android:background">@drawable/border_button_green</item>
        <item name="android:textColor">#333</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
    </style>

    <style name="RedButton">
        <item name="android:background">@drawable/border_button_red</item>
        <item name="android:textColor">#333</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>